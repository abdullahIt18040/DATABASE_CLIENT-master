<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<welcome-file-list>
    <welcome-file>Signin.jsp</welcome-file>
</welcome-file-list>
    <servlet>
        <servlet-name>Forgot_Password</servlet-name>
        <servlet-class>Forgot_Servlet.Forgot_Password</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register_Dao</servlet-name>
        <servlet-class>com.java.milon.Register_Dao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Email_Confirmation</servlet-name>
        <servlet-class>Mail.Email_Confirmation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Query_Execute</servlet-name>
        <servlet-class>com.java.milon.Query_Execute</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTableData</servlet-name>
        <servlet-class>com.java.milon.GetTableData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.java.milon.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Img_Insert</servlet-name>
        <servlet-class>Image_Insert.Img_Insert</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Forgot_Password</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register_Dao</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Email_Confirmation</servlet-name>
        <url-pattern>/confirmemail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Query_Execute</servlet-name>
        <url-pattern>/Query_Execute</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTableData</servlet-name>
        <url-pattern>/GetTableData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Img_Insert</servlet-name>
        <url-pattern>/imginsert</url-pattern>
    </servlet-mapping>

</web-app>